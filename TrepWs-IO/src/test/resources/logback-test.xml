<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date{yyyy-MM-dd HH:mm:ss} %-5level %-20logger{0} [%-4thread] %msg %n</pattern>
        </encoder>
    </appender>
    
    <logger name="ch.qos.logback"      level="OFF" />
    <logger name="com.refinitiv"       level="INFO" />
    
    <root level="OFF">
        <appender-ref ref="STDOUT" />
    </root>
    
</configuration>